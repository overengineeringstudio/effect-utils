{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "MegarepoConfig": {
      "type": "object",
      "required": ["members"],
      "properties": {
        "$schema": {
          "type": "string"
        },
        "members": {
          "type": "object",
          "required": [],
          "properties": {},
          "additionalProperties": {
            "type": "string"
          }
        },
        "generators": {
          "$ref": "#/$defs/GeneratorsConfig"
        },
        "lockSync": {
          "$ref": "#/$defs/LockSyncConfig"
        }
      },
      "additionalProperties": false
    },
    "GeneratorsConfig": {
      "type": "object",
      "required": [],
      "properties": {
        "vscode": {
          "$ref": "#/$defs/VscodeGeneratorConfig"
        }
      },
      "additionalProperties": false
    },
    "VscodeGeneratorConfig": {
      "type": "object",
      "required": [],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "color": {
          "type": "string"
        },
        "colorEnvVar": {
          "type": "string"
        },
        "settings": {
          "type": "object",
          "additionalProperties": {}
        }
      },
      "additionalProperties": false
    },
    "LockSyncConfig": {
      "type": "object",
      "required": [],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "$ref": "#/$defs/MegarepoConfig"
}
