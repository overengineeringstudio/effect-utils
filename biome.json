{
  "$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
  "files": {
    "includes": ["**", "!!**/dist", "!!**/node_modules", "!!**/.direnv", "!!**/.devenv", "!!/nix"]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
